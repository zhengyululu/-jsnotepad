{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018
  },
  "rules": {
      "no-unused-vars": "off",
      "indent": [
          "error",
          4,
          {
              "SwitchCase": 1,
              "VariableDeclarator": {
                  "var": 2,
                  "let": 2,
                  "const": 3
              }
          }
      ],
      "linebreak-style":"off",
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}